# Logging levels
LOG_DEBUG=1 LOG_ERROR=2 LOG_CRITICAL=3
export OPUS_LOG_LEVEL=$LOG_CRITICAL

export PROJ_HOME=$PWD
export TOP=$PROJ_HOME
export PROJ_INCLUDE=$PROJ_HOME/include
export PROTO_INC_PATH=/home/nb466/protocolBuffers/include
export PROTO_LIB_PATH=/home/nb466/protocolBuffers/lib
export OPUS_UDS_PATH=$PROJ_HOME/src/backend/demo_socket
export OPUS_LIB_NAME=opusinterpose
export PYTHON=python2.7
export LIBC_SRC_PATH=/local/scratch/nik/glibc
export LIBC_BUILD_PATH=/local/scratch/nik/build/glibc

# Add the protobuf extension library to the python path
export PYTHONPATH=$PROJ_HOME/lib/:$PROJ_HOME/src/backend/:$PYTHONPATH
export PROTOCOL_BUFFERS_PYTHON_IMPLEMENTATION=cpp

# Message aggregation controls
export OPUS_MSG_AGGR=1 # ON=1, OFF=0
export OPUS_MAX_AGGR_MSG_SIZE=1024 # Size in bytes

